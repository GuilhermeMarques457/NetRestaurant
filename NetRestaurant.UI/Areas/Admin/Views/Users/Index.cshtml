@model List<User>

@{
    ViewBag.Title = "List Users";
}


<link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">

<div class="container">
    <table id="UsersTable" class="table table-striped table-hover">
        <thead style="background-color: var(--bs-primary); color: white">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Address</td>
                <td>Is Admin</td>
                <td></td>
            </tr>

        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.IsAdmin</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            $("#UsersTable").DataTable({
                resposive: true,
                pageLength: 30,
                lengthMeny: [5, 10, 30, 100],
                order: [[0, 'asc']]
            })
        })
    </script>
}

