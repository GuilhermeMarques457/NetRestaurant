@model List<Dish>

@{
    ViewBag.Title = "List Dishes";
}

<div class="container">
    <table id="DataTable" class="table table-striped table-hover">
        <thead style="background-color: var(--bs-primary); color: white">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Description</td>
                <td></td>
            </tr>

        </thead>
        <tbody>
            @foreach (var Dish in Model)
            {
                <tr>
                    <td>@Dish.Id</td>
                    <td>@Dish.Name</td>
                    <td>@Dish.Category.Name</td>
                    <td>@Dish.Price</td>
                    <td>@Dish.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Dish.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Dish.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <partial name="_DataTable" />
}